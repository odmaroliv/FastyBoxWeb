@page
@model RegisterConfirmationModel
@using System.Globalization
@{
    ViewData["Title"] = CultureInfo.CurrentUICulture.Name.StartsWith("es") ? "Confirmación de Registro" : "Registration Confirmation";
    var isSpanish = CultureInfo.CurrentUICulture.Name.StartsWith("es");
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h2 class="mb-3 fw-bold">
                        <span class="text-primary">Fasty</span><span>Box</span>
                    </h2>
                    <h4>@ViewData["Title"]</h4>
                </div>

                <div class="alert alert-success" role="alert">
                    <h5 class="alert-heading">@(isSpanish ? "¡Gracias por registrarte!" : "Thank you for registering!")</h5>
                    <p>
                        @(isSpanish ? $"Hemos enviado un correo electrónico a {Model.Email}." :
                            $"We've sent an email to {Model.Email}.")
                    </p>
                    <hr>
                    <p class="mb-0">
                        @(isSpanish ? "Por favor, revisa tu bandeja de entrada (o carpeta de spam) y haz clic en el enlace para activar tu cuenta." :
                            "Please check your inbox (or spam folder) and click the link to activate your account.")
                    </p>
                </div>

                @if (Model.DisplayConfirmAccountLink)
                {
                    <div class="alert alert-warning mt-3" role="alert">
                        <p>
                            <strong>@(isSpanish ? "Modo desarrollo" : "Development Mode")</strong> -
                            @(isSpanish ? "También puedes usar este enlace para confirmar tu cuenta:" :
                                "You can also use this link to confirm your account:")
                        </p>
                        <p>
                            <a id="confirm-link" class="btn btn-outline-primary" href="@Model.EmailConfirmationUrl">
                                @(isSpanish ? "Confirmar cuenta" : "Confirm account")
                            </a>
                        </p>
                    </div>
                }

                <div class="text-center mt-4">
                    <a class="btn btn-outline-primary" href="@Url.Content("~/")">
                        @(isSpanish ? "Volver al inicio" : "Back to home")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>